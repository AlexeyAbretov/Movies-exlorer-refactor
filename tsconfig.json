{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src/**/*.ts", 
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}